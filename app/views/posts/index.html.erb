<h1>ホーム</h1>
<p><%= notice %></p>
<%= link_to '新規作成', new_post_path, class: "btn" %>
<div class="container-fluid">
<% @posts.each do |post| %>
  <ul class="row">
    <li class="col-md-2"><%= post.user.name %></li>
    <li class="col-md-4"><%= image_tag post.picture.url if post.picture && post.picture.url %></li>
    <li class="col-md-3"><%= post.content %></li>
    <li class="col-md-3">
      <div class="row">
        <li class="col-xs-4 col-md-1"><%= link_to '詳細', post_path(post.id), class: "option" %></li>
        <li class="col-xs-4 col-md-1"><%= link_to '編集', edit_post_path(post.id), data: { confirm: '本当に編集していいですか？' }, class: "option" %></li>
        <li class="col-xs-4 col-md-1"><%= link_to '削除', post_path(post.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }, class: "option" %></li>
      </div>
    </li>
  </ul>
<% end %>
</div>
