<!DOCTYPE html>
<html>
  <head>
    <title>FriendLinkApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
      <% if logged_in? %>
          <div class="status">
            ようこそ <%= current_user.name %> さん
          </div>
          <%= link_to "Profile", user_path(current_user.id), class:"link" %>
          <%= link_to "Logout", session_path(current_user.id), method: :delete, class:"link" %>
        <% else %>
          <div class="status">
            ログインしてください
          </div>
          <%= link_to "Sign up", new_user_path, class:"link" %>
          <%= link_to "Login", new_session_path, class:"link" %>
          <% end %>
    </header>
          <%= yield %>
  </body>
</html>
